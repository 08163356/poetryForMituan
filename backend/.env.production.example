# 服务器配置
PORT=8002
NODE_ENV=production

# MongoDB配置 - 本地 MongoDB 社区版（推荐）
# 在服务器安装 MongoDB 后使用本地连接，更快更稳定
MONGODB_URI=mongodb://localhost:27017/poetry_family

# 如果需要使用 MongoDB Atlas 云数据库，替换为：
# MONGODB_URI=mongodb+srv://<username>:<password>@<cluster>.mongodb.net/poetry_family?retryWrites=true&w=majority

# JWT配置 - 生产环境请修改为复杂密钥
JWT_SECRET=poetry-family-secret-key-production-2024-change-me
JWT_EXPIRES_IN=7d

# AI配置 - 古诗校验（可选）
AI_VERIFY_API_KEY=
AI_VERIFY_API_URL=https://api.openai.com/v1/chat/completions
AI_VERIFY_MODEL=gpt-3.5-turbo

# AI配置 - 图片生成（可选）
AI_IMAGE_API_KEY=
AI_IMAGE_API_URL=https://api.openai.com/v1/images/generations
AI_IMAGE_MODEL=dall-e-3

# 文件上传配置
UPLOAD_DIR=/var/www/poetry/uploads
MAX_FILE_SIZE=10485760
